{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "..",
    "rootDir": "./src",
    "outDir": "./api",
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": [
    "archive/src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
